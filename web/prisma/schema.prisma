generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PublishStatus {
  DRAFT
  PUBLISHED
}

model User {
  id Int @id @default(autoincrement())
  username String @unique
  description String?
  clerkId String @unique

  maps Map[]
  mapLikes MapLike[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model MapVersion {
  id Int @id @default(autoincrement())
  map Map @relation(fields: [mapId], references: [id])
  mapId Int
  version String
  downloadUrl String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Map {
  id Int @id @default(autoincrement())
  publishStatus PublishStatus @default(DRAFT)
  name String
  description String?
  imageUrl String?
  user User @relation(fields: [userId], references: [id])
  userId Int

  versions MapVersion[]
  likes MapLike[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model MapLike {
  id Int @id @default(autoincrement())
  user User @relation(fields: [userId], references: [id])
  userId Int
  map Map @relation(fields: [mapId], references: [id])
  mapId Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

