generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PublishStatus {
  DRAFT
  PUBLISHED
}

model User {
  id Int @id @default(autoincrement())
  username String
  description String?

  maps Map[]
  mapLikes MapLike[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([username])
}

model Map {
  id Int @id @default(autoincrement())
  publishStatus PublishStatus @default(DRAFT)
  name String
  description String?
  imageUrl String
  downloadUrl String
  user User @relation(fields: [userId], references: [id])
  userId Int

  likes MapLike[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model MapLike {
  id Int @id @default(autoincrement())
  user User @relation(fields: [userId], references: [id])
  userId Int
  map Map @relation(fields: [mapId], references: [id])
  mapId Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

